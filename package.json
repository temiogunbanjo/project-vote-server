{
  "name": "vote-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm run lint:src && nodemon",
    "start": "npx pm2 restart ecosystem.config.js --env production --only api",
    "test": "jest",
    "test:src": "jest --testPathPattern=src --logHeapUsage --passWithNoTests --detectOpenHandles=false",
    "build": "babel src --copy-files --out-dir build",
    "db:generate:model": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev --name init",
    "db:migrate:update": " npx prisma db push",
    "db:seed:all": "npx sequelize db:seed:all",
    "db:seed:undo": "npx sequelize db:seed:undo:all",
    "db:generate:seed": "npx sequelize seed:generate",
    "lint": "npm run lint:src",
    "lint:src": "eslint ./src",
    "coverage": "npm run test:src -- --detectOpenHandles=false --coverage=true --silent=false --verbose=false",
    "upgrade": "npm run upgrade:ncu && npm run upgrade:install",
    "upgrade:rm": "rm -Rf node_modules",
    "upgrade:ncu": "npx npm-check-updates -u",
    "upgrade:install": "npm install"
  },
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "@prisma/client": "^5.6.0",
    "app-root-path": "^3.1.0",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^9.3.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.1",
    "node-sequelize-stream": "^2.0.6",
    "sequelize": "^6.33.0",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@babel/register": "^7.22.15",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "prisma": "^5.6.0",
    "sequelize-cli": "^6.6.1",
    "sinon": "^16.0.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
